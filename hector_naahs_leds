int vermelho = 7;
int laranja = 6;
int azul = 5;
int verde = 4;
int tempo = 250;


void setup()
{
 pinMode(vermelho, OUTPUT);
 pinMode(laranja, OUTPUT);
 pinMode(azul, OUTPUT);
 pinMode(verde, OUTPUT);
  
}


void loop()
{
  
  piscarvermelho();
  piscarlaranja();
  piscarazul();
  piscarverde();



}


void piscarvermelho(){
  
  digitalWrite(vermelho,HIGH);
  delay(tempo);
  digitalWrite(vermelho, LOW);
  delay(tempo);
}


void piscarlaranja(){
  
  digitalWrite(laranja,HIGH);
  delay(tempo);
  digitalWrite(laranja, LOW);
  delay(tempo);  
}


void piscarazul(){
  
  digitalWrite(azul,HIGH);
  delay(tempo);
  digitalWrite(azul, LOW);
  delay(tempo);  
}


void piscarverde(){
  
  digitalWrite(verde,HIGH);
  delay(tempo);
  digitalWrite(verde, LOW);
  delay(tempo);  
}
